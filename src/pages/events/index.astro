---
import { getCollection } from 'astro:content';
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import StructuredData from '~/components/common/StructuredData.astro';

const metadata = {
  title: 'Events',
  description: 'Upcoming and past Mage-OS and Magento community events worldwide.',
};

// Get all events and sort by date
const allEvents = await getCollection('event');
const now = new Date();

const sortedEvents = allEvents.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

const upcomingEvents = sortedEvents.filter((event) => new Date(event.data.date) >= now);
const pastEvents = sortedEvents.filter((event) => new Date(event.data.date) < now).slice(0, 20);

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(new Date(date));
}
---

<Layout metadata={metadata}>
  <!-- Structured Data for upcoming events -->
  {
    upcomingEvents.map((event) => (
      <StructuredData
        type="Event"
        data={{
          name: event.data.title,
          startDate: new Date(event.data.date).toISOString(),
          description: event.data.excerpt || `${event.data.title} - A Mage-OS community event`,
          location: event.data.location
            ? {
                '@type': 'Place',
                name: event.data.location,
              }
            : undefined,
          url: event.data.url || `https://mage-os.org/events`,
          eventStatus: 'https://schema.org/EventScheduled',
          eventAttendanceMode: 'https://schema.org/OfflineEventAttendanceMode',
        }}
      />
    ))
  }

  <Hero tagline="Events">
    <Fragment slot="title">
      Community<br />
      <span class="text-accent dark:text-white">Events</span>
    </Fragment>

    <Fragment slot="subtitle">
      Meet the Mage-OS community at events worldwide. From Meet Magento conferences to local hackathons, there's always
      something happening.
    </Fragment>
  </Hero>

  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-6xl">
    {
      upcomingEvents.length > 0 && (
        <section class="mb-16" aria-labelledby="upcoming-events-heading">
          <h2 id="upcoming-events-heading" class="text-3xl font-bold tracking-tight dark:text-white sm:text-4xl mb-8">Upcoming Events</h2>
          <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3" role="list">
            {upcomingEvents.map((event) => (
              <article class="bg-white dark:bg-slate-800 rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border border-gray-200 dark:border-slate-700" role="listitem">
                <div class="text-sm text-primary dark:text-blue-400 font-medium mb-2">
                  {formatDate(event.data.date)}
                </div>
                <h3 class="text-xl font-semibold mb-2 dark:text-white">{event.data.title}</h3>
                {event.data.location && (
                  <p class="text-gray-600 dark:text-slate-400 text-sm mb-2">
                    <span class="inline-flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                        <title>Location</title>
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                        />
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                        />
                      </svg>
                      {event.data.location}
                    </span>
                  </p>
                )}
                {event.data.excerpt && <p class="text-gray-600 dark:text-slate-400 text-sm">{event.data.excerpt}</p>}
                {event.data.url && (
                  <a
                    href={event.data.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="mt-4 inline-block text-primary dark:text-blue-400 font-medium text-sm hover:underline"
                  >
                    Learn more &rarr;
                  </a>
                )}
              </article>
            ))}
          </div>
        </section>
      )
    }

    {
      upcomingEvents.length === 0 && (
        <div class="mb-16 text-center py-12 bg-gray-50 dark:bg-slate-800 rounded-lg">
          <h2 class="text-2xl font-bold tracking-tight dark:text-white mb-4">No Upcoming Events</h2>
          <p class="text-gray-600 dark:text-slate-400">
            Check back soon for new events, or browse our past events below.
          </p>
        </div>
      )
    }

    {
      pastEvents.length > 0 && (
        <section aria-labelledby="past-events-heading">
          <h2 id="past-events-heading" class="text-3xl font-bold tracking-tight dark:text-white sm:text-4xl mb-8">Past Events</h2>
          <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3" role="list">
            {pastEvents.map((event) => (
              <article class="bg-gray-50 dark:bg-slate-800/50 rounded-lg p-4 border border-gray-200 dark:border-slate-700" role="listitem">
                <div class="text-xs text-gray-500 dark:text-slate-500 font-medium mb-1">
                  {formatDate(event.data.date)}
                </div>
                <h3 class="text-lg font-medium dark:text-white">{event.data.title}</h3>
                {event.data.location && (
                  <p class="text-gray-500 dark:text-slate-500 text-sm mt-1">{event.data.location}</p>
                )}
              </article>
            ))}
          </div>
        </section>
      )
    }
  </section>
</Layout>
