---
import { twMerge } from 'tailwind-merge';

export interface Props {
  status: 'recommended' | 'supported' | 'minimum' | 'deprecated';
  text?: string;
  class?: string;
}

const { status, text, class: className } = Astro.props;

const variants = {
  recommended: {
    label: 'Recommended',
    classes: 'bg-green-100 text-green-800 dark:bg-green-900/50 dark:text-green-300',
  },
  supported: {
    label: 'Supported',
    classes: 'bg-blue-100 text-blue-800 dark:bg-blue-900/50 dark:text-blue-300',
  },
  minimum: {
    label: 'Minimum',
    classes: 'bg-gray-100 text-gray-700 dark:bg-gray-700/50 dark:text-gray-300',
  },
  deprecated: {
    label: 'Deprecated',
    classes: 'bg-red-100 text-red-800 line-through dark:bg-red-900/50 dark:text-red-300',
  },
};

const variant = variants[status];
const displayText = text ?? variant.label;
---

<span
  class={twMerge(
    'inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium',
    variant.classes,
    className
  )}
>
  {displayText}
</span>
