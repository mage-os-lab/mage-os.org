---
/**
 * CodeBlock - A wrapper around Astro's Code component with dual theme support.
 *
 * Uses the same themes as markdown code blocks (configured in astro.config.ts):
 * - Light mode: one-light
 * - Dark mode: dracula
 */
import { Code } from 'astro:components';
import type { ComponentProps } from 'astro/types';

type CodeProps = ComponentProps<typeof Code>;

type Props = Omit<CodeProps, 'themes' | 'theme'>;

const props = Astro.props;
---

<Code
  {...props}
  themes={{
    light: 'one-light',
    dark: 'dracula',
  }}
/>
