---
import Item from '~/components/blog/GridItem.astro';
import type { Post } from '~/types';

export interface Props {
  posts: Array<Post>;
  columns?: 3 | 4;
}

const { posts, columns } = Astro.props;

// Adjust grid columns: use prop if specified, otherwise auto-detect based on post count
const gridCols = columns === 3 || posts.length === 3 ? 'lg:grid-cols-3' : 'lg:grid-cols-4';
---

<div class={`grid gap-6 row-gap-5 md:grid-cols-2 ${gridCols} -mb-6`}>
  {posts.map((post) => <Item post={post} />)}
</div>
